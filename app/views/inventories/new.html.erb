<%= simple_form_for @inventory do |f| %>
  <%= f.input :quantity, collection: 1..4, include_blank: false %>
  <%= f.association :card %>
  <%= f.input :foil %>
  <%= f.association :user, label_method: :login, include_blank: false  %>
<% end %>

<script>
  $(document).ready(function() { $("#inventory_card_id").select2({width: "element"}); });
</script>
