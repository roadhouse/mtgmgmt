<div id="container" class="section" ng-controller="DeckBuilderController">
  <nav>
    <live-search />
  </nav>

  <div class="row section">
    <div id="test1" class="col s12 l6 section">
      <h5 class="center-align">Resultados</h5>
        <div class="card col l4 container" ng-repeat="entry in entries" style="padding:0;" >
          <div class="card-image">
            <img ng-src="{{ entry.image }}">
          </div>
          <div class="card-content">
            <i class="material-icons">{{ entry.priceStatus == 'equal' ? 'done' : 'arrow_'+entry.priceStatus+'ward' }}</i>
            <span class="card-title activator grey-text text-darken-4">R$ {{ entry.price }}<i class="material-icons right">more_vert</i></span>
          </div>
          <div class="card-reveal">
            <span class="card-title">Add to deck<i class="material-icons right">close</i></span>
            <a class="waves-effect waves-lighpt btn" ng-click="addToDeck(entry.id)">+4</a>
            <a class="waves-effect waves-light btn" ng-click="removeToDeck(entry.id)">-4</a>
          </div>
        </div>
    </div>

    <div class="col s12 l3 section">
      <h5 class="center-align">Initial Hand</h5>
      <ul class="collection">
        <li class="collection-item" ng-repeat="card in deck.first_hand track by $index">
          {{ card }}
        </li>
      </ul>
    </div>
    <div class="col s12 l3 section">
      <h5 class="center-align">Deck List</h5>
      <ul class="collection with-header">
        <li class="collection-header">
          <i ng-class="isValid.color" class="material-icons red-text"/>{{ isValid.icon }}</i>

          <span class="secondary-content">Total: {{ deck.deck_size }}</span>
        </li>
        <li class="collection-item" ng-repeat="card in deck.deck_list">
        {{ card.copies}}
        <span class="secondary-content">{{ card.name }}</span>
        </li>
      </ul>
    </div>

    <div class="col s12 l2 section">
      <h5 class="center-align">Manacost</h5>
      <canvas class="chart chart-bar" data="deck.mana.data" labels="deck.mana.labels"></canvas>
    </div>

    <div class="col s12 l2 section">
      <h5 class="center-align">Colors</h5>
      <canvas class="chart chart-pie" data="deck.color.data" labels="deck.color.labels" colours="deck.color.colors"></canvas>
    </div>

    <div class="col s12 l2 section right">
      <h5 class="center-align">Types</h5>
      <canvas class="chart chart-pie" data="deck.type.data" labels="deck.type.labels"></canvas>
    </div>
</div>
