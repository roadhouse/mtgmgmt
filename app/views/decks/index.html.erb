<div class="pure-g">
  <div class="pure-u-1-3 pure-u-md-1-3">
    <h1>Decks</h1>

    <table class="pure-table pure-table-horizontal">
      <tr>
        <th>Name</th>
      </tr>

      <% @decks.each do |deck| %>
        <tr>
          <td><%= link_to deck.name, deck %></td>
        </tr>
      <% end %>
    </table>

    <%= paginate @decks %>
  </div>

  <div class="pure-u-2-3 pure-u-md-2-3">
    <h1>Top cards</h1>
    <ol>
      <% @orthanc.most_playable_cards.each do |deck_entry| %>
        <li><%= deck_entry.card.name %></li>
      <% end %>
    </ol>
  <div>
</div>
