<div class="pure-g">
  <div class="pure-u-1 pure-u-md-1-2">
    <h1>Decks</h1>

    <table class="pure-table pure-table-horizontal">
      <tr>
        <th>Name</th>
      </tr>

      <% @decks.each do |deck| %>
        <tr>
          <td><%= link_to deck.name, deck %></td>
        </tr>
      <% end %>
    </table>

    <%= paginate @decks %>
  </div>

  <div class="pure-u-1 pure-u-md-1-2">
    <h1>Most playable cards</h1>
    <% @orthanc.most_playable_cards.each do |deck_entry| %>
      <%= image_tag deck_entry.card.image %>
    <% end %>
  <div>
</div>
