<ul class="collapsible nested-collapsible" data-collapsible="accordion" ng-controller="InventoryController">
  <% cards.each do |card| %>
    <li>
      <div class="collapsible-header">
        <span class="mtg  <%= [Card::ICON_NAME[card.set.to_sym],card.rarity.to_s.downcase].join(" ") %>"></span>
        <span><%= card.name %></span>
        <span class="secondary-content">
          <span><%= number_to_currency card.on_demand_price %></span>
        </span>
      </div>
      <div class="collapsible-body">
        <% if user_signed_in? %>
          <div class="row">
            <%= render "inventories/collection_form", card_id: card.id %>
          </div>
        <% end %>
        <div class="row center-align">
          <%= image_tag card.image, alt: card.name, class: "responsive-img" %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
