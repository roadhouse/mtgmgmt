<% cards.each_pair do |card_type, cards| %>
  <h5><%= card_type %></h5>
  <ul class="collapsible" data-collapsible="accordion">
    <% cards.each do |card| %>
      <li>
        <div class="collapsible-header">
          <%= "#{card[:copies]} #{card[:card].name}" %>
        </div>
        <div class="collapsible-body">
          <ul class="collection">
            <li class="collection-item">
              <%= number_to_currency card[:card].on_demand_price %>
            </li>

            <li class="collection-item">
          <%= render "inventory_form", card: card[:card] %>
            </li>

            <li class="collection-item">
          <%= image_tag card[:card].image, alt: card[:card].name, class: "responsive-img" %>
            </li>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
